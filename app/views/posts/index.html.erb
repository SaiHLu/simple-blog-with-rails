<%# <% content_for :page_title, "Index" %> 

<div class="section">
  <div class="container">
  <h1 class="title">Blog Index</h1>

  <% @posts.each do |post| %>
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="medai-content">
            <p class="title is-4">
              <%= link_to post.title,post %>
            </p>
          </div>
        </div>
        <div class="content">
          <%= post.content %>
        </div>
        <div class="comment-count">
          <span class="tag is-rounded">
            <%# comment count %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>